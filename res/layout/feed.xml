<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.facebook.widget.ProfilePictureView
                android:id="@+id/selection_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_horizontal"
                facebook:preset_size="small" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/updatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/post_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/post_picture"
                    android:layout_width="80pt"
                    android:layout_height="80pt"
                    android:layout_gravity="left"
                    android:contentDescription="@string/post_picture" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/likeImage"
                        android:layout_width="10pt"
                        android:layout_height="10pt"
                        android:contentDescription="@string/likeImage"
                        android:scaleType="fitStart"
                        android:src="@drawable/face_like" />

                    <TextView
                        android:id="@+id/countLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/commentImg"
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:contentDescription="@string/commentImg"
                        android:scaleType="fitStart"
                        android:src="@drawable/face_comment" />

                    <TextView
                        android:id="@+id/countComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/posted_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
</ScrollView>